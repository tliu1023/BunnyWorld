<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cs108.stanford.edu.bunnyworldeditor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoadAdventure"
            android:screenOrientation="landscape"></activity>
        <activity android:name=".EditMain"
            android:screenOrientation="landscape"/>
        <activity android:name=".SaveEditGame"
            android:screenOrientation="landscape"/>
        <activity android:name=".AddShape"
            android:screenOrientation="landscape"/>
        <activity android:name=".AddPage"
            android:screenOrientation="landscape"/>
        <activity android:name=".GotoPage"
            android:screenOrientation="landscape"/>
        <activity android:name=".EditPage"
            android:screenOrientation="landscape"/>
        <activity android:name=".EditShape"
            android:screenOrientation="landscape"/>
        <activity android:name=".EditScript"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".GameActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".DrawActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>